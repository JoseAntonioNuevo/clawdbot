# ═══════════════════════════════════════════════════════════════════
# ORCHESTRATOR SETTINGS (Optional overrides)
# ═══════════════════════════════════════════════════════════════════

# Worktree location
WORKTREE_BASE=~/ai-worktrees

# Iteration limits
MAX_OPENCODE_ITERATIONS=80
MAX_CLAUDE_ITERATIONS=10

# Stuck detection
STUCK_DETECTION_WINDOW=8

# Parallel tasks
MAX_PARALLEL_TASKS=5

# Default base branch
DEFAULT_BASE_BRANCH=main

# Auto-run tests (true/false)
AUTO_RUN_TESTS=true
